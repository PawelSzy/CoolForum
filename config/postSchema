var mongoose = require('mongoose');


var mongoose = require('mongoose');

var postSchema = {
  _id: { type: String },
  id_autora: { type : ObjectId, ref: 'uzytkownik'  },
  tytul: { type: String, required: true},
  tresc: { type: String, required: true},
  data_utworzenia: { type: Date, default: Date.now }
};

//ustaw maksymalna dlugosc tytulu
uzytkownikSchema.path('tytul').validate(function (v) {
  return v.length > 32;
});

module.exports = new mongoose.Schema(postSchema);
module.exports.postSchema = postSchema;

